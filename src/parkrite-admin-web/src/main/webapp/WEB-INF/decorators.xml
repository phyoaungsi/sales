<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/debug.jsp</pattern>
        <pattern>/styles/*</pattern>
        <pattern>/scripts/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/dojo/*</pattern>
        <pattern>/struts/*</pattern>
        <pattern>/ajax/AjaxResult*</pattern>
        <pattern>/AjaxTest.action</pattern>
        <pattern>/ajax/remoteforms/AjaxRemoteForm.action</pattern>
        <pattern>/tags/ui/ajax/*</pattern>
        <pattern>/chat/ajax/*</pattern>
        <pattern>/hangman/ajax/*</pattern>
        <pattern>/nodecorate/*</pattern>
        <pattern>/virtualpath/images.do</pattern>
           <pattern>/index.html</pattern>
            <pattern>/reports/*</pattern>
    </excludes>

    <decorator name="main" page="main.jsp">
        <pattern>/*</pattern>
    </decorator>
    
    <decorator name="welcome" page="parkrite_login.jsp">
        <pattern>/login/login.jsp</pattern>
         <param name="property.name" value="PAS" />
    </decorator>
     <decorator name="welcome" page="parkrite_login.jsp">
        <pattern>/login/error.jsp</pattern>
         <param name="property.name" value="PAS" />
    </decorator>
     <decorator name="welcome" page="parkrite_login.jsp">
        <pattern>/logout/logout.do</pattern>
         
    </decorator>
    <!--<decorator name="panel" page="panel.jsp"/>-->
    <!--<decorator name="dashedBox" page="dashedBox.jsp"/>-->
    <!--<decorator name="printable" page="printable.jsp"/>-->
</decorators>
